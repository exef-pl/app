FROM python:3.11-slim

WORKDIR /app

# Install aiosmtpd for SMTP server
RUN pip install --no-cache-dir aiosmtpd

# Install dependencies for SMTP server
COPY test_smtp_server.py .

# Create directory for emails
RUN mkdir -p /app/test_emails

# Expose port
EXPOSE 1025

# Run the SMTP server
CMD ["python", "test_smtp_server.py"]
