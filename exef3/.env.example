# EXEF3 Environment Configuration Template
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=sqlite:///./data/exef.db

# Security Settings
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=EXEF3
DEBUG=true

# CORS Origins (comma-separated if using docker-compose without array syntax)
BACKEND_CORS_ORIGINS=["http://localhost:3003","http://127.0.0.1:3003"]

# Container Ports
CONTAINER_PORT=8000
HOST_PORT=8003
FRONTEND_CONTAINER_PORT=3000
FRONTEND_HOST_PORT=3003

# Frontend Environment Variables
VITE_API_URL=http://localhost:8003
VITE_API_BASE_URL=/api/v1
VITE_APP_NAME=EXEF3
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Document Flow Engine"

# Optional: Database settings for PostgreSQL (uncomment to use)
# DATABASE_URL=postgresql://exef_user:password@localhost:5432/exef_db

# Optional: Redis settings (uncomment to use)
# REDIS_URL=redis://localhost:6379/0

# Optional: Email settings (uncomment to use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: File storage settings
# UPLOAD_DIR=./uploads
# MAX_FILE_SIZE=10485760  # 10MB in bytes
