# EXEF Configuration
# Copy to .env and adjust values

# ===================
# Application
# ===================
EXEF_APP_NAME=EXEF
EXEF_DEBUG=false
EXEF_VERSION=1.1.0

# ===================
# Database
# ===================
EXEF_DB_PATH=/data/exef.db

# ===================
# Server
# ===================
EXEF_HOST=0.0.0.0
EXEF_PORT=8000

# ===================
# KSeF Integration (v1.2.0+)
# ===================
# Environment: demo | prod
EXEF_KSEF_ENV=demo
EXEF_KSEF_NIP=
# MCU Token or Certificate path
EXEF_KSEF_TOKEN=
EXEF_KSEF_CERT_PATH=

# ===================
# Email/IMAP Integration (v1.2.0+)
# ===================
EXEF_IMAP_HOST=
EXEF_IMAP_PORT=993
EXEF_IMAP_USER=
EXEF_IMAP_PASS=
# Or use OAuth2
EXEF_IMAP_OAUTH_CLIENT_ID=
EXEF_IMAP_OAUTH_CLIENT_SECRET=

# ===================
# OCR Integration (v1.3.0+)
# ===================
EXEF_OCR_ENABLED=false
# Provider: tesseract | google | azure
EXEF_OCR_PROVIDER=tesseract
EXEF_OCR_API_KEY=

# ===================
# Authentication (v1.1.0+)
# ===================
EXEF_JWT_SECRET=change-me-in-production
EXEF_JWT_EXPIRE_MINUTES=1440

# ===================
# Storage Limits
# ===================
EXEF_MAX_FILE_SIZE_MB=10
EXEF_MAX_DOCUMENTS_PER_PROFILE=10000

# ===================
# External Services
# ===================
# Sentry for error tracking
EXEF_SENTRY_DSN=

# Analytics
EXEF_ANALYTICS_ENABLED=false

# ===================
# Electronic Signature (v1.2.0+)
# ===================
# Provider: mock | mszafir | simplysign | cloudsigner | mobywatel
EXEF_SIGNATURE_PROVIDER=mock
# mSzafir (KIR)
EXEF_MSZAFIR_API_KEY=
EXEF_MSZAFIR_API_SECRET=
EXEF_MSZAFIR_ENV=test
# SimplySign (Asseco)
EXEF_SIMPLYSIGN_CLIENT_ID=
EXEF_SIMPLYSIGN_CLIENT_SECRET=
# CloudSigner (local PKCS#11)
EXEF_CLOUDSIGNER_PKCS11_LIBRARY=
EXEF_CLOUDSIGNER_CERTIFICATE_ID=
EXEF_CLOUDSIGNER_PIN=

# ===================
# Test Environment
# ===================
# Enable mock services for testing
EXEF_TEST_MOCK_SERVICES=false
# Mock external APIs
EXEF_TEST_MOCK_KSEF=false
EXEF_TEST_MOCK_EMAIL=false
EXEF_TEST_MOCK_OCR=false
EXEF_TEST_MOCK_SIGNATURE=false
